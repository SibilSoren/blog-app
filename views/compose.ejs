<%- include("./partials/header") -%>
<div class="container">
  <h1>Compose</h1>
  <form action="/compose" method="post">
  <div class="form-group">
    <label >Post Title</label>
    <input type="text" class="form-control" aria-describedby="emailHelp" name="postTitle">
  </div>

  <div class="form-group">
    <label for="exampleFormControlTextarea1">Content</label>
    <textarea class="form-control" id="exampleFormControlTextarea1" rows="3" name="postContent"></textarea>
  </div>
  <button type="submit" class="btn btn-info btn-md">Publish</button>
</form>
</div>
<%- include("./partials/footer") -%>
